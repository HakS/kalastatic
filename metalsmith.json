{
  "plugins": {
    "metalsmith-collections": {
      "articles": {
        "pattern": "collections/articles/*.md",
        "sortBy": "order"
      },
      "team": {
        "pattern": "collections/team/*.md",
        "sortBy": "order"
      },
      "news": {
        "pattern": "collections/news/*.md"
      },
      "examples": {
        "pattern": "collections/examples/*.md",
        "sortBy": "order"
      },
      "carouselItems": {
        "pattern": "collections/carousel/*.md",
        "sortBy": "order"
      }
    },
    "metalsmith-metadata": {
      "config": "config.yaml",
      "navigation": "navigation.yaml"
    },
    "metalsmith-markdown": {},
    "metalsmith-include": {},
    "metalsmith-permalinks": {
      "pattern": ":url"
    },
    "metalsmith-swig-helpers": {
      "filters": {
        "xorcrypt": "xor-crypt"
      }
    },
    "metalsmith-templates": {
      "engine": "swig"
    },
    "metalsmith-browserify": {
      "files": [
        "js/entry.js"
      ],
      "dest": "js/scripts.js"
    },
    "metalsmith-assets": {
      "source": "./assets",
      "dest": "."
    },
    "metalsmith-sass": {
      "outputStyle": "nested",
      "sourceComments": true,
      "sourceMap": true,
      "includePaths": [
        "assets/vendor",
        "assets/vendor/bootstrap-sass-twbs/assets/stylesheets",
        "assets/vendor/fontawesome/scss/"
      ]
    }
  }
}
