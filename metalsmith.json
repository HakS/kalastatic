{
  "metadata": {
    "title": "Kalastatic",
    "description": "Static site framework for prototyping and building out CMS-less websites at Kalamuna",
    "nav": [
      {
        "name": "About",
        "title": "About Us",
        "url": "/about"
      },
      {
        "name": "Cool Things",
        "title": "Read about some cool things",
        "url": "/cool-things"
      },
      {
        "name": "Other Things",
        "title": "Some other things for you to check out.",
        "url": "/other-things"
      },
      {
        "name": "Contact",
        "title": "Contact us about anything at all!",
        "url": "/contact"
      },
      {
        "name": "Bootstrap carousel",
        "title": "Check out the bootstrap carousel",
        "url": "/carousel"
      }
    ]
  },
  "plugins": {
    "metalsmith-collections": {
      "articles": {
        "pattern": "collections/articles/*.md",
        "sortBy": "order"
      },
      "carouselItems": {
        "pattern": "collections/carousel/*.md",
        "sortBy": "order"
      }
    },
    "metalsmith-markdown": {},
    "metalsmith-permalinks": {
      "pattern": ":url"
    },
    "metalsmith-swig-helpers": {},
    "metalsmith-templates": {
      "engine": "swig"
    },
    "metalsmith-assets": {
      "source": "./assets",
      "dest": "."
    },
    "metalsmith-sass": {
      "outputStyle": "expanded",
      "includePaths": [
        "src/styles",
        "assets/vendor",
        "assets/vendor/bootstrap-sass-twbs/assets/stylesheets",
        "assets/vendor/fontawesome/scss/"
      ]
    },
    "metalsmith-concat": {
      "files": "js/**/*.js",
      "output": "js/scripts.js"
    }
  }
}
